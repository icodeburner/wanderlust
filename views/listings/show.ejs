<% layout("/layouts/boilerplates"); %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Main Listing Card -->
      <div class="card shadow-lg border-0 rounded-4">
        <div
          class="card-header text-center rounded-top-4 text-white"
          style="background-color: #fe424d"
        >
          <h3 class="mb-0 fw-light"><%= listing.title %></h3>
        </div>

        <div class="card-body p-4">
          <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item text-center">
              <img
                src="<%= listing.image.url %>"
                class="card-img-top fixed-img rounded shadow-sm"
                alt="Listing Image"
              />
            </li>
            <li class="list-group-item">
              <strong>Owned by:</strong> <i><%= listing.owner.username %></i>
            </li>
            <li class="list-group-item">
              <strong>Description:</strong> <%= listing.description %>
            </li>
            <li class="list-group-item">
              <strong>Price:</strong> ₹<%= listing.price.toLocaleString("en-IN")
              %>
            </li>
            <li class="list-group-item">
              <strong>Location:</strong> <%= listing.location %>
            </li>
            <li class="list-group-item">
              <strong>Country:</strong> <%= listing.country %>
            </li>
          </ul>
          <!-- this currUser code write in app.js inside flash middleware -->
          <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
          <div class="text-center mb-4">
            <a
              href="/listings/<%= listing.id %>/edit"
              class="btn btn-lg me-2 text-white"
              style="background-color: #fe424d"
            >
              <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a href="/listings" class="btn btn-lg btn-outline-secondary">
              <i class="bi bi-arrow-left"></i> Back to Listings
            </a>
          </div>
          <% } %>

          <% if (currUser) { %>
          <!-- Review Form -->
          <div class="card shadow-sm border-0 rounded-3 mb-4">
            <div class="card-body">
              <h5 class="card-title text-secondary fw-bold mb-3">
                Leave a Review
              </h5>
              <form
                action="/listings/<%= listing._id %>/reviews"
                method="POST"
                novalidate
                class="needs-validation"
              >
                <div class="mb-3">
                  <label for="rating" class="form-label fw-semibold"
                    >Rating (1-5)</label
                  >
                  <select
                    class="form-select shadow-sm"
                    id="rating"
                    name="review[rating]"
                    required
                  >
                    <option value="">Choose...</option>
                    <option value="1">⭐ 1</option>
                    <option value="2">⭐ 2</option>
                    <option value="3">⭐ 3</option>
                    <option value="4">⭐ 4</option>
                    <option value="5">⭐ 5</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="comment" class="form-label fw-semibold"
                    >Comment</label
                  >
                  <textarea
                    class="form-control shadow-sm"
                    id="comment"
                    name="review[comment]"
                    rows="3"
                    required
                  ></textarea>
                  <div class="invalid-feedback">Please leave a comment.</div>
                </div>
                <button
                  type="submit"
                  class="btn px-4 text-white"
                  style="background-color: #fe424d"
                >
                  <i class="bi bi-send"></i> Submit Review
                </button>
              </form>
            </div>
          </div>
          <% } %>

          <!-- Reviews List -->
          <div class="mt-4">
            <h4 class="mb-3 text-primary border-bottom pb-2 fw-bold">
              Reviews
            </h4>
            <% if (listing.reviews && listing.reviews.length) { %> <% for (let
            review of listing.reviews) { %>
            <div class="border rounded-3 p-3 mb-3 bg-white shadow-sm">
              <div class="d-flex justify-content-between align-items-center">
                <!-- Rating and Date -->
                <div>
                  <span class="badge bg-warning text-dark fs-6"
                    >⭐ <%= review.rating %></span>
                  <small class="text-muted ms-2">
                    <i class="bi bi-clock"></i> <%= new
                    Date(review.createdAt).toLocaleDateString() %>
                  </small>
                  <small class="text-muted ms-2">
                    <i class="bi bi-clock"></i>
                     @<%= review.author.username %>
                  </small>
                </div>

                <!-- Delete Button -->
                <form
                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  method="POST"
                  class="m-0">
                  <button
                    type="submit"
                    class="btn btn-sm btn-danger d-flex align-items-center px-2 py-1">
                    <i class="bi bi-trash me-1"></i> Delete
                  </button>
                </form>
              </div>

              <!-- Comment -->
              <p class="mt-2 mb-0 text-secondary border-top pt-2">
                <%= review.comment %>
              </p>
            </div>
            <% } %> <% } else { %>
            <p class="text-muted fst-italic">No reviews yet. Be the first!</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
